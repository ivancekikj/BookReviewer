<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Reviewer - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
    <style>
        @@media(min-width: 1080px) {
            .container {
                width: 1080px;
            }
        }

        @@media (max-width: 767px) {
            form {
                width: 90%;
            }
        }
        th,td {
            text-align:center;
        }
        #page-load-message {
            display: none;
        }
    </style>
</head>
<body>
    @Html.Partial("_Navigation")
    <main class="container py-5">
        @RenderBody()
    </main>
    <footer class="bg-primary text-white">
        <div class="container p-3 text-center">Copyright &copy; <span id="current-year"></span> <strong>Book Reviewer</strong>. All Rights Reserved.</div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/CustomScripts/CurrentYear.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>