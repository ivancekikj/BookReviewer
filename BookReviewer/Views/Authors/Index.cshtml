@model ICollection<BookReviewer.Models.DbModels.Author>

@{
    ViewBag.Title = "All Authors";
}


<h2 class="text-center mb-4">All Authors</h2>
<div class="text-center mb-4">
    <a href="/Authors/Create" class="btn btn-primary">Create a New Author</a>
</div>

<table class="table table-striped" id="data-table">
    <thead class="bg-primary text-white">
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a href="/Authors/Edit/@item.Id" class="btn btn-primary">Edit</a>
                    <button class="btn btn-danger ajax-delete" url="/Authors/Delete/@item.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script src="~/Scripts/CustomScripts/DataTable.js" type="module"></script>
}
